#include<iostream>
using namespace std;
void  print(int i)//这是最简单的确定形参的方式
{
	cout << i << endl;
}
void print(const int*beg, const int *end)//管理数组实参的第二种方式，传递指向数值首元素和尾后元素的指针
{
	while (beg != end)

		cout << *beg++<<endl;

}
void print(const int ia[], size_t size)//显示传递一个表示数组大小的形参
{
	for (size_t i = 0; i != size; ++i)
	{
		cout << ia[i] << endl;
	}
}
void print(int(&arr)[2])//数组引用形参,括号必须如图所示使用
{
	for (auto i : arr)
		cout << i << endl;
}
int main()
{
	int i = 0, j[2] = { 0,1 };
	print(i);
	print(begin(j), end(j));
	print(j, end(j) - begin(j));
	print(j);
	return 0;
}
